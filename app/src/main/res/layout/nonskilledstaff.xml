<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nonskilled_staff"
        android:layout_width="match_parent"
        android:text="@string/viewattendence"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:layout_width="match_parent"
        android:id="@+id/nonskilled_staff_progress"
        android:layout_below="@id/nonskilled_staff"
        android:layout_height="30dp" />

    <ListView
        android:id="@+id/nonskilled_staff_list"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:scrollbars="none"
        android:layout_height="wrap_content" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/skilled_staff_floating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:clickable="true"
        android:src="@drawable/ic_refresh" />

</RelativeLayout>