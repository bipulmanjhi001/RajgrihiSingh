<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="60sp"
        android:layout_height="60sp"
        android:src="@drawable/ic_launcher_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_margin="10sp"
        android:gravity="center"
        android:background="@drawable/select_button"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="Date :"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/labour_dates"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:inputType="date"
                android:paddingLeft="10sp"
                android:hint="@string/ex_date"
                android:textSize="12sp"
                android:layout_height="wrap_content" />

            <Button
                android:layout_weight="1"
                android:id="@+id/labour_date_click"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="@string/dates"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:background="@drawable/select_button"
                android:layout_height="28dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="10sp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="staff :"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/labour_names"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:hint="names"
                android:textSize="12sp"
                android:layout_height="wrap_content" />

            <Button
                android:layout_weight="1"
                android:id="@+id/labour_name_click"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="@string/employee"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:background="@drawable/select_button"
                android:layout_height="28dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="10sp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="Amount :"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/labour_amounts"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:inputType="number"
                android:paddingLeft="10sp"
                android:hint="@string/total"
                android:textSize="12sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="10sp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="Remarks:"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/labour_remarks"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:textColor="@color/colorPrimary"
                android:inputType="text"
                android:paddingLeft="10sp"
                android:textSize="12sp"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginBottom="10sp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:text="Signature"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/add_sign"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="ADD SIGN"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="12sp"
                android:background="@drawable/select_button"
                android:layout_height="34dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:layout_marginTop="20sp"
            android:layout_marginBottom="10sp"
            android:layout_height="wrap_content">

            <Button
                android:layout_weight="1"
                android:id="@+id/pay_date_click"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:text="PAY"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10sp"
                android:textSize="12sp"
                android:background="@drawable/select_button"
                android:layout_height="36dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>